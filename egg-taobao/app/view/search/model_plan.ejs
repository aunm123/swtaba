<div id="hot" style="display: none;">
    <div id="J_SEARCH_HISTORY">
        <h1 class="search-title">
            历史搜索
            <span class="clear-cache" onclick="clearHistory()"><i class="icon-delete"></i>清除记录</span>
        </h1>
        <section id="history-words" data-spm="8001" class="search-list-keys">
        </section>
    </div>
    <div id="J_SEARCH_KGB">
        <h1 class="search-title">热门搜索</h1>
        <section data-spm="8002" class="search-list-keys">

            <% hotkeywords.forEach(function(item){ %>
            <a href="/search?q=<%= item %>" class="item"><%= item %></a>
            <% }); %>

        </section>
    </div>
</div>
<script>
	var arrayList = JSON.parse(localStorage.getItem("aitt_history")) || []
	var result = '';
	arrayList.forEach(function(item){
		result += '<a href="/search?q=' + item + '" class="item">' + item + '</a>'
	})

	$('#history-words').html(result);

	function clearHistory() {
		localStorage.setItem("aitt_history", JSON.stringify([]))
		$('#history-words').html('');
	}
</script>