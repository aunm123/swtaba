<script src="public/js/iscroll/iscroll.js"></script>
<div>
    <img style="width: 100vw" height="150"
         src="https://gw.alicdn.com/tfs/TB1R.cskfDH8KJjy1XcXXcpdXXa-750-300.jpg_q75.jpg" alt="">
    <header class="toolbar sticky">
        <div class="toolbar__btn-wrapper clearfix">
            <div class="toolbar__btn toolbar__back">
                <a href="javascript:;" onClick="closePage()">
                    <i class="iconfont icon-back_light"></i>
                </a>
            </div>
        </div>
    </header>
    <div class="header-nav-con">
        <div id="cell-iscroll">
            <div class="header-nav" id="header-nav" style="touch-action: none;">
                <ul class="header-nav-list">

                    <% topsell.forEach(function (item,index) {  %>
                        <li class="header-nav-item <%if(index==0){%>select<%}%>" data-model="<%=item.id%>">
                            <span><%=item.cName%></span>
                        </li>
                    <% }) %>

                </ul>
            </div>
        </div>
        <button class="filter-icon js-hide js-noBg"></button>
    </div>
</div>
<script>
	new IScroll('#header-nav', {scrollX: true, scrollY: true, freeScroll: true});
	$(function () {
        $('.header-nav-item').click(function (e) {
	        $('.select').removeClass('select');
	        $(e.currentTarget).addClass('select');

	        var sele_id = $(e.currentTarget).attr("data-model");
	        changeSelect(sele_id);
        })
	})
</script>